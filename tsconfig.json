{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ES6",
		"outDir": "./dist",
		"lib": [
			"dom",
			"es5",
			"es2015.collection",
			"es2015.promise",
			"WebWorker",
			"WebWorker.ImportScripts"
		],
		"jsx": "preserve",
		"sourceMap": true,
		"esModuleInterop": true,
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}